				$('#help-block-FIRSTNAME_USER').show();
				validate=false;
			}
			
			if($('#EMAIL_USER').val()==''){
				$('#form-group-EMAIL_USER').addClass( "has-error" );
				$('#help-block-EMAIL_USER').show();
				validate=false;
			}
			
			if($('#PASSWORD_USER').val()!='' && $('#PASSWORD_USER').val()!=$('#PASSWORDCONFIRM').val()){
				$('#form-group-PASSWORDCONFIRM').addClass( "has-error" );
